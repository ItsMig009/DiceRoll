<?xml version="1.0" encoding="utf-8"?>
<!--match_parent matches width of root view-->
<!--wrap_content matches the height of its content-->
<!-- In the context of .MainActivity-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="center_vertical"
    tools:context=".MainActivity">
    <!-- Added tools attribute to change the default namespace.
         This gives us a preview of the image we are working with-->
    <!-- Image appears while I am designing the app but not in my actual app-->
    <ImageView
        android:contentDescription="@string/default_dice_image"
        android:id="@+id/dice_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/empty_dice"
        tools:src="@drawable/dice_1"
        />
    <Button
        android:id="@+id/roll_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/roll"
        />
</LinearLayout>